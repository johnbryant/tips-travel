.photo

  include ../navbar/navbar
  .cl-mcont(
      infinite-scroll='photo_reddit.nextPage()'
      infinite-scroll-disabled='photo_reddit.busy'
      infinite-scroll-distance='0'
      )
    .masonry(ng-repeat='photo in photo_reddit.items')
      .masonry-brick(ng-repeat='photo in photo_reddit.items')
        .media
          .media-left
            img.media-object(ng-src='{{baseUrl + photo.user.avatar }}',alt='Avatar', style='width:65px;height:65px;margin-left: 7px;margin-top: 5px;')
          .media-body
            h4.media-heading
              | {{ photo.user.username }}
              button.btn.btn-info(type='button', style='margin-left: 7px;margin-top: 5px'
              ng-click='follow_user($index,photo.user.user_id,photo.user.isfollowed)'
              ng-bind='photo.follow_return.follow_btn_content')
              button.btn.btn-default(type='button', style='margin-left: 7px;margin-top: 7px;'
              ng-click='like_tips($index,photo.message_id,photo.like_count)'
              )
                .input(type='image'
                src='{{photo.like_return.like_btn_url}}')
              span(
                ng-bind='photo.like_return.like_count',style='width:350px;max-height:90%;margin-left:7px'
              )

            |      {{ photo.context }}
        p(style='text-align:center')
          img(ng-src='{{baseUrl + photo.image }}',style='width:350px;margin-top:5px')
          a.tips_tag(
          href="{{baseUrl + photo.image }}"
          download
          ) 【下载原图】

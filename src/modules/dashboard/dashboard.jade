.dashboard
  //导航栏
  #toggle.button-container(ng-click='opendNav()')
    span(ng-class='{top_active:topactive}')
    span(ng-class='{middle_active:middleactive}')
    span(ng-class='{bottom_active:bottomactive}')
  #overlay(ng-class='{overlay:onclose,overlay_open:onopen}')
    nav
      ul
        li
          a Sign in
        li
          a Sign up
        li
          a Search


  //内容框架
  .container-fluid
    .row-fluid
      //左侧栏
      .col-md-1

      .col-md-8
        .left_column
          //新建tip框
          .new_tip_container
            a.user_avatar
              img(src='styles/img/avatar4.jpg')
            nav.new_tip_buttons
              a.new_tip_label
                .tip_button_icon
                  i.fa.fa-font
                span.new_tip_label_text Text
              a.new_tip_label
                .tip_button_icon
                  i.fa.fa-camera
                span.new_tip_label_text Photo
              a.new_tip_label
                .tip_button_icon
                  i.fa.fa-link
                span.new_tip_label_text Link
              a.new_tip_label
                .tip_button_icon
                  i.fa.fa-headphones
                span.new_tip_label_text Audio
              a.new_tip_label
                .tip_button_icon
                  i.fa.fa-video-camera
                span.new_tip_label_text Video


          //好友tips
          .tips_container(
          ng-repeat= "tip in tipsdata"
          )
            ul.tips_timeline
              li
                time.tips_time
                  span 4/30/15
                  span 18:30
                .tips_id
                  .tips_user_avatar
                    img(ng-src="{{BaseURL}}{{tip.user.avatar}}",alt='Avatar')
                .tips_icon.tips_icon-phone
                .tips_label
                  a.tips_username
                    h5 {{tip.user.username}}
                  img.tips_image(ng-src="{{BaseURL}}{{tip.image}}")
                  p.tips_text {{tip.context}}
                  a.tips_tag( 
                  ng-repeat= "tag in tip.tag_message" 
                  )       #'{{tag.tag.tag_name}}'
                  .likes
                    i.fa.fa-thumbs-o-up
                    p 2
                  .blank_content

      //右侧栏
      .col-md-3
        .right_column

.search
  include ../navbar/navbar
  .cart
    .row
      .col-lg-6
        .input-group
            input.form-control(ng-model="tag_name",type='text',placeholder='Search for...', style='height:30px; width:270px')
            h4{{ errorInfo }}
      section
        #container_buttons
          p
            button.a_demo_four(
              ng-click='searchFor()'
              ) {{ test }}

  .wrapper
    h3
      span.label.label-.label-default(ng-click='searchForTag1()') Cities
      span.label.label-primary(ng-click='searchForTag2()') Ocean
      span.label.label-success(ng-click='searchForTag3()') Nature
      span.label.label-info(ng-click='searchForTag4()') Mountains
      span.label.label-warning(ng-click='searchForTag5()') HongKong
      span.label.label-danger(ng-click='searchForTag6()') Architecture

  .wrapper2(display='{{activestatus1}}')
    .box1
      a(href='topic/1')
        img(src='../../styles/img/1.png')
    .box2
        a(href='topic/2')
          img(src='../../styles/img/2.png')
    .box3
        a(href='topic/3')
          img(src='../../styles/img/3.png')
    .box4
      a(href='topic/4')
        img(src='../../styles/img/4.png')
    .box5
      a(href='topic/5')
        img(src='../../styles/img/5.png')
    .box6
      a(href='topic/6')
        img(src='../../styles/img/6.png')
    .box7
      a(href='topic/7')
        img(src='../../styles/img/7.png')
    .box8
      a(href='topic/8')
        img(src='../../styles/img/8.png')


  .cl-mcont(
    infinite-scroll='photo_reddit.nextPage()'
    infinite-scroll-disabled='photo_reddit.busy'
    infinite-scroll-distance='0'
    )
  .area(ng-repeat='photo in photo_reddit.items',display='{{activestatus}}')

    div(id='{{photo.divde}}')
      div(class='{{photo.style}}')
        .media
          .media-left
            img.media-object(ng-src='{{baseUrl + photo.user.avatar }}',alt='Avatar', style='margin-left: 7px;margin-top: 5px;')
          .media-body
            h4.media-heading
              | {{ photo.user.username }}
              button.btn.btn-danger.btn-sm(type='button', style='margin-left: 7px;margin-top: 5px'
              ng-click='follow_user($index,photo.user.user_id,photo.user.isfollowed)'
              ng-bind='photo.follow_return.follow_btn_content')
              button.btn.btn-default.btn-sm(type='button', style='margin-left: 7px;margin-top: 7px'
              ng-click='like_tips($index,photo.message_id,photo.like_count)'
              ng-bind='photo.like_return.like_count')

                a(herf='#')
                  img(src='../../styles/img/thumb.jpg', style='width:18px;height:18px;')
            |      {{ photo.context }}
        p(style='text-align:center')
          img(ng-src='{{baseUrl + photo.image }}')

.login
    #toggle.button-container(ng-click='openlNav()')
        span(ng-class='{top_active:topactive}')
        span(ng-class='{middle_active:middleactive}')
        span(ng-class='{bottom_active:bottomactive}')
    #overlay(ng-class='{overlay:onclose,overlay_open:onopen}')
        nav
            ul
                li
                    a(ng-click='goSignup()') Sign up
                li
                    a Sign in
                li
                    a Search IPicYou


    // Start page content
    header.container-fluid.intro-lg.uppercase.bkg
        .col-xs-10.col-xs-offset-1.col-sm-8.col-sm-offset-2.col-md-8.col-md-offset-2
            h1#title.animated.rubberBand IPicYou.
            h3#sub.animated.bounceInLeft {{ hello }}
            form.form-signin
                label.sr-only(for='inputEmail') Email address
                input.form-control(
                ng-model='email'
                type='email'
                placeholder='Email address'
                required=''
                autofocus=''
                )
                label.sr-only(for='inputPassword') Password
                input.form-control(
                type='password', placeholder='Password', required=''
                ng-model='password'
                )
                p {{ signup_errorInfo }}
                button.btn.btn-lg.btn-primary.btn-block(
                ng-click='signin()'
                ) Sign in



    // Footer
    footer
      p
